<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".PinEntryView" >
    <TextView
        android:id="@+id/titleBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Payroll Processing LLC 'The Local Guys'"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:padding="10dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/compID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/compID0"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:password="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="XXX"
                android:maxLength="3"
                android:layout_margin="10dip"
                android:textSize="40sp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@drawable/back"
                android:layout_weight="0.30" />

        </LinearLayout>

        <TextView
            android:id="@+id/EmplySSN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login ID"
            android:gravity="left"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:padding="10dip"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/pinBox0"
                android:layout_width="55dip"
                android:layout_height="50dip"
                android:layout_margin="10dip"
                android:layout_weight="0.61"
                android:background="@drawable/back"
                android:gravity="center"
                android:hint="XXX"
                android:maxLength="3"
                android:imeOptions="actionNext"
                android:inputType="numberPassword"
                android:password="true"
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox1"
                android:inputType="numberPassword"
                android:password="true"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:hint="XX"
                android:maxLength="2"
                android:imeOptions="actionNext"
                android:layout_margin="10dip"
                android:textSize="40sp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@drawable/back"
                android:layout_weight="0.27" />

            <EditText
                android:id="@+id/pinBox2"
                android:inputType="numberPassword"
                android:password="true"
                android:hint="XXXX"
                android:maxLength="4"
                android:layout_width="122dp"
                android:layout_height="50dip"
                android:layout_margin="10dip"
                android:textSize="40sp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@drawable/back"
                android:layout_weight="0.20" />
        </LinearLayout>
        <TextView
            android:id="@+id/statusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:padding="5dip"
            />

        <Button
            android:id="@+id/btnSingIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Sign In"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/CmpnyID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company ID"
        android:gravity="left"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:padding="10dip"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true" />


</RelativeLayout>